<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClockApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="clockStyle">@style/GlobalClockStyle</item>
    </style>
    <style name="DefaultClockStyle">
        <item name="clockStrokeColor">@color/black</item>
        <item name="pointsColor">@color/black</item>
        <item name="numbsColor">@color/black</item>
        <item name="hourHandColor">@color/black</item>
        <item name="minuteHandColor">@color/black</item>
        <item name="secondHandColor">@color/black</item>
        <item name="backgroundClockColor">#0077FE</item>
        <item name="iconSrc">@drawable/vk_icon</item>
        <item name="iconWidth">140dp</item>
        <item name="iconHeight">90dp</item>

        <item name="clockRadius">150dp</item>
        <item name="widthClockStroke">12dp</item>
        <item name="widthSmallPoints">3dp</item>
        <item name="widthBigPoints">5dp</item>
        <item name="widthHourHand">10dp</item>
        <item name="widthMinuteHand">6dp</item>
        <item name="widthSecondHand">4dp</item>

        <item name="sizeNumbs">30sp</item>
    </style>
    <style name="GlobalClockStyle" parent="DefaultClockStyle">
        <item name="secondHandColor">@color/black</item>
    </style>
</resources>